extends ../layouts/index-layout.pug

block content
	section(style="height: calc(100vh - 73px);")
		.container.h-100
			.row.h-100.d-flex.align-items-center.justify-content-center
				.col-md-7.col-12.card.py-4.px-3
					h2.pb-4.px-3.text-capitalize.m-0= __('titles.login')
					form.col-12(action="/auth/login", method="POST")
						include ../partials/csrf.pug
						.form-row
							.form-group.col-12
								label.text-dark.text-capitalize.font-weight-bold.m-0(for="email")= __('user.email')
									span.ml-2.text-danger *
								input.form-control.text-secondary#email(name="email" type="email" placeholder=__('user.email'))
							.form-group.col-12
								label.text-dark.text-capitalize.font-weight-bold.m-0(for="password")= __('user.password')
									span.ml-2.text-danger *
								input.form-control.text-secondary#password(name="password" type="password" aria-describedby="passwordHelp" placeholder=__('user.password'))
						.form-row
							.form-check.form-check-inline.col-12
								.custom-control.custom-checkbox
									input(class="custom-control-input", id="remember_me", name="remember", type="checkbox", value="remember")
									label.custom-control-label.text-secondary.text-capitalize(for="remember_me") remember me
						.form-row.mt-4
							.col-12.col-md-2
								button.w-100.btn.btn-primary.text-capitalize(type="submit")= __('user.login')
							a.btn.btn-link(href='/auth/forgot')= __('user.forgot_password_q')
						.form-row
							.col-12.col-md-4.my-md-5.my-2
								a.w-100.btn.btn-outline-danger.mr-3(href="/auth/google")
									span.fab.fa-google.mr-2
									| sign in with Google+
							.col-12.col-md-4.my-md-5.my-2
								a.w-100.btn.btn-outline-primary.mr-3(href="/auth/facebook")
									span.fab.fa-facebook-f.mr-2
									| sign in with Facebook
							.col-12.col-md-4.my-md-5.my-2
								a.w-100.btn.btn-outline-dark.mr-3(href="/auth/github")
									span.fab.fa-github.mr-2
									| sign in with Github
