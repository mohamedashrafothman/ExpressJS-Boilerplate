mixin pagination(page, pages)
	.row.my-5
		nav.col-12(aria-label="page navigation")
			ul.justify-content-center.align-items-center.pagination
				li.page-item(class=`${(page==1) ? 'disabled' : ''}`)
					a.page-link(href=`/resturants/page/${page-1}`, tabindex="-1") Previous
				-var i = (Number(page) > 5 ? Number(page) - 4 : 1);
				if (i !== 1)
					li.page-item
						a.page-link(href=`/resturants/page/${Number(1)}`)  ...
				- for(; i <= (Number(page) + 4) && i <= pages; i++)
					if (i == page)
						li.page-item.active
							span.page-link= `${i}`
								span.sr-only (current)
					else 
						li.page-item
							a.page-link(href=`/resturants/page/${i}`)= `${i}`
					if (i == Number(page) + 4 && i < pages)
						li.page-item
							a.page-link(href=`/resturants/page/${Number(pages)}`) ...
				li.page-item(class=`${(page == pages) ? 'disabled' : ''}`)
					a.page-link(href=`/resturants/page/${Number(page)+1}`) Next